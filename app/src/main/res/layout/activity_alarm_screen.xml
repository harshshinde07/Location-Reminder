<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_alarm_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#000000"
    android:padding="16dp"
    tools:context="com.apps.harsh.locationremainder.AlarmScreenActivity">
    <LinearLayout
        android:id="@+id/arrived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOU HAVE ARRIVED "
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/show_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Name"
            android:textAlignment="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/show_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrived"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="18sp"
        android:textColor="#f8f8f8"
        android:textStyle="italic"
        tools:text="MESSAGE" />
    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_new"
        fancy:srcCompat="@drawable/ic_new" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/off_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        fancy:fb_defaultColor="#3b5998"
        fancy:fb_focusColor="#9bd823"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="20dp"
        android:onClick="offAlarm"
        android:text="OFF"
        android:elevation="5dp"
        android:textSize="24dp"
        android:textStyle="bold"
        fancy:fb_textColor="#FFFFFF"/>

</RelativeLayout>
