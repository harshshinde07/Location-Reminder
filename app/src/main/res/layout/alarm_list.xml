<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp">

    <TextView
        android:id="@+id/alarm_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:paddingTop="5dp"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp">

        <TextView
            android:id="@+id/alarm_location"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_place_black_24dp"
            tools:text="Location Coordinates" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/alarm_vibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Vibration" />

        <TextView
            android:id="@+id/alarm_ringtone"
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_notifications_black_18dp"
            tools:text="my Ringtone" />

        <TextView
            android:id="@+id/range"
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="Range: "
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/color"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="#000000"
            android:text="Color: "
            android:textSize="16sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/alarm_delete"
        android:layout_width="24dp"
        android:layout_gravity="fill_horizontal"
        android:layout_height="24dp"
        android:layout_below="@id/on_off"
        android:layout_marginTop="125dp"
        android:layout_marginStart="300dp"
        android:background="@drawable/ic_delete_black_24dp" />

    <ToggleButton
        android:id="@+id/on_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="270dp"
        android:layout_marginTop="60dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/show_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="127dp"
        android:layout_marginStart="66dp"
        android:padding="4dp"
        tools:text="100"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_alignTop="@+id/range"
        android:layout_toEndOf="@+id/range" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_color"
        android:layout_marginTop="152dp"
        android:layout_marginStart="60dp"
        tools:text="blue"
        android:padding="4dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_alignTop="@+id/color"
        android:layout_toEndOf="@+id/color"/>

</android.support.v7.widget.CardView>